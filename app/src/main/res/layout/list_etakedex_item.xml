<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp"
    android:background="@drawable/roundlist">

    <ImageView
        android:id="@+id/iv_avataretakedex"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        app:srcCompat="@mipmap/ic_launcher_round"
        android:layout_marginEnd="15dp"
        app:layout_constraintRight_toLeftOf="@+id/tv_name_etakedex"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/tipo_etakedex"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_name_etakedex"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="15dp" />

    <TextView
        android:id="@+id/tv_name_etakedex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="12sp"
        android:textStyle="bold"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="108dp"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="108dp" />

    <TextView
        android:id="@+id/tv_habilidad_etakedex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Habilidad"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="10sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/tv_name_etakedex"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_etakedex"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/tv_name_etakedex" />

    <TextView
        android:id="@+id/tipo_etakedex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:text="Tipo"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="10sp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_habilidad_etakedex"
        app:layout_constraintRight_toRightOf="@+id/tv_habilidad_etakedex"
        app:layout_constraintTop_toBottomOf="@+id/tv_habilidad_etakedex"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

</android.support.constraint.ConstraintLayout>